zIndex = 9999
scrollBarColor = rgba(255, 255, 255, 0.1)
scrollBarColorDragging = rgba(255, 255, 255, 0.2)
scrollBarOpacity = 0.9
iframeBackground = transparent

// In top.document
#sublime-scroll
    position: fixed
    overflow: hidden
    z-index: zIndex
    right: 0
    opacity: 0

    #sublime-scroll-iframe
        position: absolute
        border: 0
        margin: 0
        padding: 0
        overflow: hidden
        top: 0
        left: 0
        z-index: (zIndex + 1)

    &.sublime-scroll-dragging
        #sublime-scroll-overlay
            cursor: ns-resize

    #sublime-scroll-overlay
        position: fixed
        top: 0
        right: 0
        height: 100%
        z-index: (zIndex + 2)

// Inside iframe
body.sublime-scroll-window
    background-color: iframeBackground

    #sublime-scroll-bar
        position: absolute
        top: 0
        right: 0
        width: 100%
        background-color: scrollBarColor
        opacity: scrollBarOpacity
        z-index: 99999

        .sublime-scroll-fixed-element
            position: absolute
            box-shadow: none

    &.sublime-scroll-dragging
        #sublime-scroll-bar
            background-color: scrollBarColorDragging
